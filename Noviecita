        font-size: 24px;
        color: #555;
      }
      button {
        padding: 15px 30px;
        font-size: 20px;
        background-color: #ff69b4;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      button:disabled {
        background-color: #ff1493;
        cursor: default;
      }
      img {
        margin-top: 20px;
        width: 300px;
        border-radius: 15px;
      }
    </style>
  </head>
  <body>
    <h1>Hola, mi princesa 💗</h1>
    <p>Aunque estemos lejos, quería recordarte cuánto te amo.</p>
    <button id="boton" onclick="mostrarMensaje()">Haz clic aquí 💌</button>
    <p id="mensaje" style="margin-top: 30px; font-weight: bold;"></p>

    <script>
      function mostrarMensaje() {
        const mensaje = "Eres lo mejor que me ha pasado. Te amo con todo mi corazón 💖";
        let i = 0;
        const p = document.getElementById('mensaje');
        p.innerHTML = "";
        const btn = document.getElementById('boton');
        btn.disabled = true;
        btn.innerText = "Te amo ❤️";

        const interval = setInterval(() => {
          p.innerHTML += mensaje.charAt(i);
          i++;
          if (i > mensaje.length) {
            clearInterval(interval);
            mostrarImagen();
          }
        }, 100);
      }

      function mostrarImagen() {
        const img = document.createElement('img');
        img.src = 'https://media.giphy.com/media/v1.Y2lkPWVjZjA1ZTQ3eTVnaHJmZnhhNGZqbTk3ODQ2NXhqM2d2OGNreWtvNjN1NXpmYTgzZSZlcD12MV9naWZzX3NlYXJjaCZjdD1n/NUkNjO6J6kwiLuethv/giphy.gif'; // Gif corazones
        document.body.appendChild(img);
      }
    </script>
  </body>

